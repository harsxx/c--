/*============================ CONDITIONS ==================*/

//======= find positive and negative no ==========
#include <iostream>
using namespace std;

int main() {
    int a;
    cout << "Enter value of a: ";
    cin >> a;
    if(a>0)
    cout<< a <<" is a positive no." <<endl;
    else if(a<0)
    cout<< a <<" is a negative no." <<endl;
    else
    cout <<" is equals to 0" <<endl;
    return 0;
}

//========= find the greater of two ==========
#include <iostream>
using namespace std;

int main() {
    int a,b;
    cout << "Enter value of a and b" << endl;
    cin >> a >> b;
    if(a > b)
    cout << a << " is greater then " << b << endl;
    else 
    cout << b << " is greater then " << a << endl;
}

//======== LOWER, UPPER, NUMERICAL VALUE BY ASCII=====
#include <iostream>
using namespace std;

int main() {
    char ch;
    cout << "Enter a char in ch" << endl;
    cin >> ch;
    int ascii = ch;
    if(ascii >= 97 && ascii <= 122 )
    cout << " LOWER CASE" << endl;
    else if(ascii >= 65 && ascii <= 90)
    cout << " UPPER CASE" << endl;
    else if(ascii >= 48 && ascii <= 57)
    cout << "NUMERICAL" << endl;
    else
    cout << "VALUE NOT AVILABLE" << endl;
}

//======== LOWER, UPPER, NUMERICAL VALUE ===========
#include <iostream>
using namespace std;

int main() {
     char ch;
    cout<<"enter your data:";
    cin >> ch;
    if (ch >= 'A' && ch <= 'Z')
    {
        cout << "Uppercase";
    }
    else if (ch >= 'a' && ch <= 'z')
    {
        cout << "Lowercase";
    }
    else if (ch >= '0' && ch <= '9')
    {
        cout << "digits";
    }
    else
    {
        cout << "try again";
    }
return 0;
}

/*=========================== LOOP ======================*/
//********** WHILE ***********
//====================print no till n using while
#include <iostream>
using namespace std;
int main() {
  int n;
  int i=1;
  cin >> n;
  while(i <= n){
    cout << i<< " ";
      i = i+1;
  }
}

// ========== add n numbers =====
#include <iostream>
using namespace std;

int main() {
  int n;
  int i = 1;
  int sum = 0;
  cin >> n;
  while(i <= n){
    cout << i<< " ";
     sum = sum + i;
      i = i+1;
  }
  cout<< endl<< "SUM IS" << sum << endl;
}
