// Solving Patterns(Part-2)
// =======================  PATTERN  ===========================
// PRINT N ROW AND COLUMB STARS 
#include <iostream>
using namespace std;

int main(){
    int n;
    int row = 1;
    cout << "Enter no: " << endl;
    cin >> row;
    while (row <= n){
        int col = 1;
        while( col <= n) {
        cout << "*";
        col=col+1;
        }
        cout << endl;
        row = row +1;
    }
    return 0;
}

// PRINT N ROW AND COLUMB Numbers
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter: ";
    cin >> n;
    while(row <= n)
    {
        int col = 1;
        while (col <= n){
            cout << col;
            col = col+1;
        }
        cout << endl;
        row = row + 1;
    }
    return 0;
}


// PRINT REVERSE N ROW AND COLUMB 
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter: ";
    cin >> n;
    while(row <= n)
    {
        int col = 1;
        while (col <= n){
            cout << n-col+1;
            col = col+1;
        }
        cout << endl;
        row = row + 1;
    }
    return 0;
}

// PRINT REVERSE N ROW AND COLUMB (1,2,3,4,5,6,7)
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    int count = 1;
    cout << "Enter: ";
    cin >> n;
    while(row <= n)
    {
        int col = 1;
        while (col <= n){
            cout << count;
            count = count +1;
            col = col+1;
        }
        cout << endl;
        row = row + 1;
    }
    return 0;
}

//Print Triangle Star pattern
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter : ";
    cin >> n;
    while(row <= n){
        int col = 1;
        while(col <= row){
            cout << "*";
            col=col+1;
        }
        cout << endl;
        row=row+1;
    }
    return 0;
}

//Print Triangle Number pattern
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter : ";
    cin >> n;
    while(row <= n){
        int col = 1;
        while(col <= row){
            cout << row;
            col=col+1;
        }
        cout << endl;
        row=row+1;
    }
    return 0;
}

//Print Triangle Number pattern(1,2,3,4,5,6,7)

#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    int count = 1;
    cout << "Enter : ";
    cin >> n;
    while(row <= n){
        int col = 1;
        while(col <= row){
            cout << count;
            count = count +1;
            col=col+1;
        }
        cout << endl;
        row=row+1;
    }
    return 0;
}

//Print Triangle Number pattern
/*1
  23
  345
  456
*/
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter : ";
    cin >> n;
    while(row <= n){
        int col = 1; int val = row;
        while(col <= row){
            cout << val;
            val = val+1;
            col=col+1;
        }
        cout << endl;
        row=row+1;
    }
    return 0;
}
// =========== OR =============
#include <iostream>
using namespace std;

int main() {
    int n;
    int row = 1;
    cout << "Enter : ";
    cin >> n;
    while(row <= n){
        int col = row;
        while(col < 2*row){
            cout <<col;
            col=col+1;
        }
        cout << endl;
        row=row+1;
    }
}
